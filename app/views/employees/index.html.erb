<h1>Employees</h1>

<div class="media">
  <div class="media-body">
    <table class='table table-hover'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Job type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= link_to employee.name, employee %></td>
            <td><%= employee.phone %></td>
            <td><%= employee.job_type %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-xs btn-default' %></td>
            <td><%= link_to 'Destroy', employee, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: "Are you sure you want to delete '#{employee.name}'?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Employee', new_employee_path %>
